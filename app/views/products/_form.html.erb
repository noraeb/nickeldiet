<%= form_for @product do |f| %>

    <div class="form-group">
       <%= f.label :Naam %>
       <%= f.text_field :name, class: "form-control", placeholder: ". . ." %>
    </div>

    <div class="form-group">
       <%= f.label :categorie, :class => "control-label" %>
       <div>
          <% genres = Category.all.map{|t| [t.name, t.id]}.sort %>
          <%= f.collection_select :category_id, Category.order(:name),:id,:name, include_blank: false %>
       </div>
    </div>

    <%= f.submit (@product.new_record? ? "Voeg toe" : "Update"), class: "form-control btn-primary" %>

<% end %>
